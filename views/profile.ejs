<!DOCTYPE html>
<html>
<head>
  <title>Perfil</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>
  <div id="main" class="container profile-container">
    <h1>Perfil</h1>
    <img src="/img/profile_picture.jpg" alt="Foto de Perfil" class="img-thumbnail animated fadeIn">
    <p class="mt-3"><strong>Email:</strong> <%= user.email %></p>
    <p><strong>UID:</strong> <%= user.uid %></p>
    <p><strong>Email Verificado:</strong> <%= user.emailVerified ? 'Sim' : 'Não' %></p>
    <p><strong>Nome de Exibição:</strong> <%= user.displayName %></p>
    <button class="btn btn-primary" onclick="document.getElementById('displayNameModal').style.display='block'">Editar Nome</button>
  </div>

  <!-- Modal para editar o nome -->
  <div id="displayNameModal" class="modal">
    <div class="modal-content" >
      <span class="close" onclick="document.getElementById('displayNameModal').style.display='none'">&times;</span>
      <form action="/profile/update" method="POST">
        <div class="form-group">
          <label for="displayName">Novo Nome de Exibição:</label>
          <input type="text" id="displayName" name="displayName" class="form-control" value="<%= user.displayName %>" required>
        </div>
        <button type="submit" class="btn btn-success">Atualizar Nome</button>
      </form>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>