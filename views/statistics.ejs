<!DOCTYPE html>
<html>
<head>
  <title>Estatísticas</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container statistics-container">
    <h1>Estatísticas</h1>
    <div class="stats-wrapper">
      <div class="stat">
        <h2>Total de Minutos</h2>
        <p id="totalMinutes" class="count" data-count="<%= statistics.totalMinutes %>">0</p>
      </div>
      <div class="stat">
        <h2>Total de Anexos</h2>
        <p id="totalAttachments" class="count" data-count="<%= statistics.totalAttachments %>">0</p>
      </div>
      <div class="stat">
        <h2>Total de Tarefas</h2>
        <p id="totalTasks" class="count" data-count="<%= statistics.totalTasks %>">0</p>
      </div>
    </div>
    <% if (isAdmin) { %>
      <form action="/statistics/user" method="POST" id="userSelectForm" class="mt-4">
        <div class="form-group">
          <label for="selectedUser">Selecione o Utilizador:</label>
          <input list="users" id="selectedUser" name="selectedUser" class="form-control" onchange="document.getElementById('userSelectForm').submit()">
          <datalist id="users">
            <% users.forEach(user => { %>
              <option value="<%= user %>"><%= user %></option>
            <% }) %>
          </datalist>
        </div>
      </form>
    <% } %>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/js/script.js"></script>
  <script>
    $(document).ready(function() {
      $('.count').each(function() {
        var $this = $(this);
        jQuery({ Counter: 0 }).animate({ Counter: $this.data('count') }, {
          duration: 2000,
          easing: 'swing',
          step: function() {
            $this.text(Math.ceil(this.Counter));
          }
        });
      });
    });
  </script>
</body>
</html>
