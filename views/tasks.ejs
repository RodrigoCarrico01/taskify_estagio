<!-- views/tasks.ejs -->
<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Tarefas</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>
  <div id="main" class="container tasks-container">
    <h1 class="mt-5">Tarefas Submetidas</h1>
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">ID da Tarefa</th>
          <th scope="col">Email</th>
          <th scope="col">Data</th>
          <th scope="col">Tempo (minutos)</th>
          <th scope="col">Descrição</th>
          <th scope="col">Anexos</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.rendered_data.uwQfBFVs.value %></td>
            <td><%= task.rendered_data.pMymcHDh.value %></td>
            <td><%= task.rendered_data['6S3ZodpU'].value %></td>
            <td><%= task.rendered_data.xWJE73P0.value %></td>
            <td><%= task.rendered_data.Fkgzk9s2.value %></td>
            <td>
              <ul class="list-unstyled">
                <% ['zHJ08uHz', 'eRv22zzj', 'xfCb1Den', '82P5aHnp', 'aoDSWJnM'].forEach(anexo => { %>
                  <% if (task.rendered_data[anexo] && task.rendered_data[anexo].value) { %>
                    <li><a href="<%= task.rendered_data[anexo].value %>" target="_blank" download><i class="fas fa-paperclip"></i> Baixar Anexo <%= anexo %></a></li>
                  <% } %>
                <% }) %>
              </ul>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>
