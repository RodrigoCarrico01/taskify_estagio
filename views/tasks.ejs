<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Tarefas</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>
  <div id="main" class="tasks-container">
    <h1>Tarefas Submetidas</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ID da Tarefa</th>
          <th>Email</th>
          <th>Data</th>
          <th>Tempo (minutos)</th>
          <th>Descrição</th>
          <th>Anexos</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.rendered_data.uwQfBFVs.value %></td>
            <td><%= task.rendered_data.pMymcHDh.value %></td>
            <td><%= task.rendered_data['6S3ZodpU'].value %></td>
            <td><%= task.rendered_data.xWJE73P0.value %></td>
            <td><%= task.rendered_data.Fkgzk9s2.value %></td>
            <td>
              <ul>
                <% ['zHJ08uHz', 'eRv22zzj', 'xfCb1Den', '82P5aHnp', 'aoDSWJnM'].forEach(anexo => { %>
                  <% if (task.rendered_data[anexo] && task.rendered_data[anexo].value) { %>
                    <li><a href="<%= task.rendered_data[anexo].value %>">Anexo <%= anexo %></a></li>
                  <% } %>
                <% }) %>
              </ul>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
